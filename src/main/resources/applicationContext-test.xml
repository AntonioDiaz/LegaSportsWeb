<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="com.adiaz.controllers" />
    <context:component-scan base-package="com.adiaz.daos" />
    <context:component-scan base-package="com.adiaz.services" />
    <context:component-scan base-package="com.adiaz.services.security" />
    <context:component-scan base-package="com.adiaz.forms" />

    <mvc:annotation-driven></mvc:annotation-driven>
</beans>